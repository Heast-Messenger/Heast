<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Client.App">
	<Application.Styles>
		<SimpleTheme />
		<StyleInclude Source="Styles/Textblocks.axaml" />
		<StyleInclude Source="Styles/Globals.axaml" />
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://Client/Resources/Colors.axaml" />
				<ResourceInclude Source="avares://Client/Resources/Fonts.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>