<view:LoginBase
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:view="clr-namespace:Client.View.Content"
   xmlns:vm="clr-namespace:Client.ViewModel"
   xmlns:controls="clr-namespace:Client.View.Controls"
   x:Class="Client.View.Content.Login.WelcomePanel">

   <Design.DataContext>
      <vm:LoginWindowViewModel />
   </Design.DataContext>

   <Grid RowDefinitions="Auto, *, 50.0">
      <TextBlock Grid.Row="0"
                 VerticalAlignment="Center"
                 FontSize="32.0"
                 FontFamily="{StaticResource Poppins}">
         <Run Text="Welcome to"
              Foreground="{DynamicResource White}" />
         <LineBreak />
         <Run Text="Heast Messenger">
            <Run.Foreground>
               <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                  <LinearGradientBrush.GradientStops>
                     <GradientStop Offset="0" Color="#FFFDB242" />
                     <GradientStop Offset="1" Color="#FFFFCF8A" />
                  </LinearGradientBrush.GradientStops>
               </LinearGradientBrush>
            </Run.Foreground>
         </Run>
      </TextBlock>

      <Image Grid.Row="1" Source="/Assets/Logos/Heast.png" />

      <Button Grid.Row="2"
              Padding="10.0"
              Click="Button_OnClick"
              Classes="Unstyled">
         <controls:Icon
            Source="{StaticResource Icon.Arrow-Right-Fill}"
            Foreground="{DynamicResource White}" />
      </Button>
   </Grid>
</view:LoginBase>