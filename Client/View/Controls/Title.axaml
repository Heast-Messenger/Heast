<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.View.Content.Login.Templates.Title">
   <TextBlock VerticalAlignment="Center"
              FontSize="32.0"
              FontFamily="{StaticResource Poppins}">
      <Run Text="Welcome to"
           Foreground="{DynamicResource White}" />
      <LineBreak />
      <Run Text="Heast Messenger">
         <Run.Foreground>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
               <LinearGradientBrush.GradientStops>
                  <GradientStop Offset="0" Color="#FFFDB242" />
                  <GradientStop Offset="1" Color="#FFFFCF8A" />
               </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
         </Run.Foreground>
      </Run>
   </TextBlock>
</UserControl>