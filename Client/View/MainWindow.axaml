<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="using:Client.View"
        xmlns:vm="using:Client.ViewModel"
        x:DataType="vm:MainWindowViewModel"
        x:Class="Client.View.MainWindow"
        ExtendClientAreaChromeHints="OSXThickTitleBar, PreferSystemChrome"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen">
	<Panel>
		<Border Background="{DynamicResource Mid}"
		        IsHitTestVisible="False"/>
		
		<view:Titlebar IsHitTestVisible="False"
		               VerticalAlignment="Top"
		               Padding="10 0 10 0"/>
		
		<DockPanel Margin="0 38 0 0">
			<view:Sidebar DockPanel.Dock="Right"
			              IsHitTestVisible="True"/>

            <view:Navigation DockPanel.Dock="Left"
                             IsHitTestVisible="True"
                             Padding="10.0"
                             Margin="0.0 5.0 00.0 5.0"/>

            <view:MainContent IsHitTestVisible="True"
                          Margin="0.0 0.0 10.0 10.0"/>
		</DockPanel>
    </Panel>
</Window>
