<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client.ViewModel"
             x:DataType="vm:ContentViewModel"
             x:Class="Client.View.MainContent"
             CornerRadius="20.0"
             BorderThickness="0.0"
             Background="{DynamicResource Dark}"
             Padding="10.0">
	<UserControl.Resources>
		<vm:ContentViewModel x:Key="ContentViewModel"/>
	</UserControl.Resources>
	
	<TransitioningContentControl Name="ParentControl"
	                             DataContext="{StaticResource ContentViewModel}"
	                             Content="{Binding CurrentContent}" />
</UserControl>
